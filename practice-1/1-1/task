#include <fcntl.h>
#include <unistd.h>
#include <stdio.h>
#include <stdlib.h>

#define BUFFER_SIZE 512

int main() {
    int source_fd, dest_fd;
    ssize_t bytes_read, bytes_written;
    char buffer[BUFFER_SIZE];

    // Открываем исходный файл для чтения
    source_fd = open("source.txt", O_RDONLY);
    if (source_fd == -1) {
        perror("Ошибка открытия source.txt");
        exit(EXIT_FAILURE);
    }

    // Создаем или перезаписываем файл для назначения назначения
    dest_fd = open("destination.txt", O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if (dest_fd == -1) {
        perror("Ошибка открытия/создания destination.txt");
        close(source_fd);
        exit(EXIT_FAILURE);
    }

    // Читаем из source.txt и пишем в destination.txt порциями по 512 байт
    while ((bytes_read = read(source_fd, buffer, BUFFER_SIZE)) > 0) {
        ssize_t total_written = 0;
        while (total_written < bytes_read) {
            bytes_written = write(dest_fd, buffer + total_written, bytes_read - total_written);
            if (bytes_written == -1) {
                perror("Ошибка записи");
                close(source_fd);
                close(dest_fd);
                exit(EXIT_FAILURE);
            }
            total_written += bytes_written;
        }
    }

    if (bytes_read == -1) {
        perror("Ошибка чтения");
    }

    // Закрываем файлы
    if (close(source_fd) == -1) {
        perror("Ошибка закрытия source.txt");
    }

    if (close(dest_fd) == -1) {
        perror("Ошибка закрытия destination.txt");
    }

    return 0;
}
